export global Theme {
    // surface brushes
    out property <brush> surface-primary: #202030;
    out property <brush> surface-secondary: #303050;
    out property <brush> surface-card: #00000040;
    out property <brush> surface-muted: #10102066;
    out property <brush> surface-modal: #181828ee;
    out property <brush> surface-hud: #00000066;
    out property <brush> surface-loading: #202030f0;
    out property <brush> surface-error: #281818f0;
    out property <brush> panel-background: @linear-gradient(180deg, #1A1A2Eee 0%, #161628f8 100%);
    out property <brush> panel-header-background: @linear-gradient(90deg, #FFFFFF08 0%, transparent 100%);

    // overlays
    out property <brush> overlay-strong: #00000088;
    out property <brush> overlay-medium: #00000055;

    // foreground brushes
    out property <brush> foreground: #e0e0e0;
    out property <brush> foreground-muted: #94a3b8;
    out property <brush> foreground-subtle: #64748b;
    out property <brush> foreground-strong: #ffffff;

    // accent brushes
    out property <brush> accent: #FFC040;
    out property <brush> accent-muted: #FFC04080;
    out property <brush> accent-subtle: #FFC04020;
    out property <brush> success: #80FFAA;
    out property <brush> link: #007BFF;

    // border brushes
    out property <brush> border-accent: root.accent;
    out property <brush> border-muted: #00000040;
    out property <brush> border-overlay: #FFFFFF20;
    out property <brush> border-subtle: #FFFFFF10;
    out property <brush> border-danger: #FF404080;
    out property <brush> border-panel: #000000CC;
    out property <brush> border-panel-highlight: #ffffff0a;

    // danger accents
    out property <brush> danger-foreground: #FFCCCC;
    out property <brush> danger-foreground-muted: #FFAAAA;

    // radii
    out property <length> radius-small: 6px;
    out property <length> radius-medium: 8px;
    out property <length> radius-large: 10px;
    out property <length> radius-xlarge: 12px;

    // spacing
    out property <length> spacing-xsmall: 4px;
    out property <length> spacing-small: 8px;
    out property <length> spacing-medium: 16px;
    out property <length> spacing-large: 24px;
    out property <length> spacing-xlarge: 32px;

    // font sizes
    out property <length> font-size-xsmall: 9px;
    out property <length> font-size-small: 10px;
    out property <length> font-size-medium: 12px;
    out property <length> font-size-large: 16px;
    out property <length> font-size-xlarge: 20px;
    out property <string> icon-font-family: "Segoe UI Symbol";
}
